{
  "private": true,
  "type": "module",
  "workspaces": [
    "blocks/*",
    "packages/*"
  ],
  "scripts": {
    "appsemble": "ts-node-esm -T packages/cli/index.ts",
    "create-appsemble": "ts-node-esm -T packages/create-appsemble/index.ts",
    "e2e": "yarn workspace @appsemble/e2e e2e",
    "prepare": "husky install",
    "prettier": "prettier --check",
    "scripts": "ts-node-esm -T packages/scripts/index.ts",
    "start": "ts-node-esm -T packages/cli/index.ts start",
    "stylelint": "stylelint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "lint-staged": {
    "*.css": [
      "stylelint --report-needless-disables"
    ],
    "*.md": [
      "remark --frail --no-stdout"
    ],
    "*.{html,json,md,scss,yaml,yml}": [
      "prettier --check"
    ],
    "*.{js,md,ts,tsx}": [
      "eslint"
    ]
  },
  "resolutions": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "axios": "~1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@lhci/cli": "^0.11.0",
    "@testing-library/jest-dom": "^5.0.0",
    "@types/jest": "^29.0.0",
    "@types/wordcloud": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-jest": "^29.0.0",
    "babel-plugin-react-intl-auto": "^3.0.0",
    "cspell": "^6.0.0",
    "dictionary-en": "^3.0.0",
    "eslint": "^8.0.0",
    "eslint-config-remcohaszing": "^8.0.0",
    "eslint-formatter-gitlab": "^4.0.0",
    "eslint-plugin-compat": "^4.0.0",
